{
  "name": "liquality-wallet",
  "version": "0.2.0",
  "private": true,
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:liquality/wallet.git"
  },
  "scripts": {
    "build": "electron-builder",
    "start": "electron index.js"
  },
  "devDependencies": {
    "electron": "^8.2.1",
    "electron-builder": "^22.4.1"
  },
  "build": {
    "appId": "io.liquality.wallet",
    "productName": "Liquality Wallet",
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg"
        }
      ]
    },
    "linux": {
      "category": "Utility"
    },
    "files": [
      "index.js",
      "dist/**/*",
      "package.json"
    ]
  }
}
