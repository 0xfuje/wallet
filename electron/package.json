{
  "name": "liquality-wallet",
  "version": "0.0.3",
  "private": true,
  "main": "index.js",
  "repository": {
    "type" : "git",
    "url" : "git@github.com:harshjv/wallet.git"
  },
  "scripts": {
    "build": "electron-builder",
    "start": "electron"
  },
  "devDependencies": {
    "electron": "^8.2.1",
    "electron-builder": "^22.4.1"
  },
  "build": {
    "appId": "io.liquality.wallet",
    "productName": "Liquality Wallet",
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.finance"
    },
    "linux": {
      "category": "Utility",
      "target": "deb, rpm, freebsd, AppImage, tar.gz"
    },
    "files": [
      "index.js",
      "dist/**/*",
      "package.json"
    ]
  }
}
